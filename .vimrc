set number		"显示行号
set nowrap		"不换行
set cindent
set shiftwidth=4        "默认缩进4空格
set softtabstop=4	"tab缩进4空格
set laststatus=2	"总是显示状态栏
set autoindent          "自动缩进
set backspace=indent,eol,start
set incsearch
set hlsearch
syntax on               "语法高亮
filetype on
filetype plugin on
filetype indent on
